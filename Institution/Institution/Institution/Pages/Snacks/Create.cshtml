@page
@model Institution.Pages.Snacks.CreateModel

@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="card bg-dark text-white">
    <div class="card-header">
        <h3>New Snack</h3>
    </div>
    <div class="card-body">
        <div>
            <div>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Snack.SnackName" class="control-label"></label>
                        <input asp-for="Snack.SnackName" class="form-control" />
                        <span asp-validation-for="Snack.SnackName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Snack.Description" class="control-label"></label>
                        <input asp-for="Snack.Description" class="form-control" />
                        <span asp-validation-for="Snack.Description" class="text-danger"></span>
                    </div>
                    <div class="d-grid gap-2">
                    </div>
                </form>
            </div>
        </div>

    </div>
    <div class="card-footer">
        <div class="d-grid gap-2">
            <button class="btn btn-success" type="button">Register</button>
            <a class="btn btn-secondary" asp-page="Index">Back</a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
