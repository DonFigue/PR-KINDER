@page
@model Institution.Pages.Courses.EditModel

@{
    ViewData["Title"] = "Edit";
}
<hr />
<div class="card bg-dark text-white">
    <div class="card-header">
        <h3>Edit Course</h3>
    </div>
    <div class="card-body">
        <div>
            <div class="">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label  class="control-label"></label>
                        <input  class="form-control" />
                       @* <span asp-validation-for="Course.CourseName" class="text-danger"></span>*@
                    </div>
                    <div class="form-group">
                        <label  class="control-label"></label>
                        <input  class="form-control" />
                        @*<span asp-validation-for="Course.Professor" class="text-danger"></span>*@
                    </div>
                    <br /> <br />
                    <div class="d-grid gap-2">
                    </div>
                </form>
            </div>
        </div>

    </div>
    <div class="card-footer">
        <div class="d-grid gap-2">
            <button class="btn btn-warning" type="button">Update</button>
            <a class="btn btn-secondary" asp-page="Index">Back</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
