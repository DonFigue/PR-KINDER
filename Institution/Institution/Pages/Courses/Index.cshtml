@model Institution.Pages.Courses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="card bg-dark text-white">
    <div class="card-header">
        <h3>Courses</h3>
    </div>
    <div class="card-body">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Course</th>
                    <th>Professor</th>
                    <th><a asp-page="Create" class="btn btn-outline-success">Add Course</a></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Kinder A</td>
                    <td>Bradd Pitt</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic outlined example">
                            <a class="btn btn-outline-warning" asp-page="Edit">Edit</a>
                            <a class="btn btn-outline-danger" asp-page="Delete">Delete</a>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

